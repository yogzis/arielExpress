<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.example.student.arielexpress.MainActivity">

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

    <ImageButton
        android:id="@+id/shopping_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="goToShoppingCart"
        android:scaleType="fitXY"
        android:src="@drawable/baseline_shopping_cart_black_18dp" />


<android.support.constraint.ConstraintLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
  <Button
      android:onClick="login"
      android:visibility="visible"
      android:id="@+id/sign"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="login/ register" />
  <Button
      android:onClick="logout"
      android:visibility="invisible"
      android:id="@+id/logout"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Logout" />

</android.support.constraint.ConstraintLayout>




    <Button
        android:id="@+id/account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="my account"
        android:onClick="goToAccount"/>

  </LinearLayout>


  <ScrollView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

        <ImageButton

            android:layout_width="99dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:src="@drawable/hoodies" />

        <TextView
            android:id="@+id/hoodies"
            android:layout_width="284dp"
            android:layout_height="100dp"
            android:gravity="center_vertical|center"
            android:text="Hoodies"
            android:textSize="30dp" />


      </LinearLayout>

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:orientation="horizontal">

        <ImageButton

            android:layout_width="99dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:src="@drawable/jackets" />

        <TextView
            android:id="@+id/jackets"
            android:layout_width="284dp"
            android:layout_height="100dp"
            android:gravity="center_vertical|center"
            android:text="Jackets"
            android:textSize="30dp" />


      </LinearLayout>

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

        <ImageButton
            android:id="@+id/j"
            android:layout_width="99dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:src="@drawable/jeans" />

        <TextView
            android:id="@+id/jeans"
            android:layout_width="284dp"
            android:layout_height="100dp"
            android:gravity="center_vertical|center"
            android:text="Jeans"
            android:textSize="30dp" />

      </LinearLayout>

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal">


        <ImageButton

            android:layout_width="99dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:src="@drawable/pants" />

        <TextView
            android:id="@+id/pants"
            android:layout_width="284dp"
            android:layout_height="100dp"
            android:gravity="center_vertical|center"
            android:text="Pants"
            android:textSize="30dp" />

      </LinearLayout>


      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal">


        <ImageButton

            android:layout_width="99dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:src="@drawable/shirts" />

        <TextView
            android:id="@+id/shirts"
            android:layout_width="284dp"
            android:layout_height="100dp"
            android:gravity="center_vertical|center"
            android:text="Shirts"
            android:textSize="30dp" />

      </LinearLayout>


      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal">


        <ImageButton

            android:layout_width="99dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:src="@drawable/shorts" />

        <TextView
            android:id="@+id/shorts"
            android:layout_width="284dp"
            android:layout_height="100dp"
            android:gravity="center_vertical|center"
            android:text="Shorts"
            android:textSize="30dp" />

      </LinearLayout>





    </LinearLayout>


  </ScrollView>
</LinearLayout>