<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.student.arielexpress.ProfileActivity">

    <TextView
        android:id="@+id/tvProfileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="273dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="136dp"
        android:text="Name: "
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tvProfileEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="273dp"
        android:layout_marginLeft="47dp" />

    <TextView
        android:id="@+id/tvProfileAdress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="263dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="10dp"
        android:text="Adress: "
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tvProfilePhone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvProfileEmail"
        android:layout_marginLeft="47dp"
        android:layout_marginRight="263dp" />

    <TextView
        android:id="@+id/tvProfileEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21dp"
        android:layout_marginEnd="287dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="10dp"
        android:text="Email"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tvProfileAdress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvProfileName"
        android:layout_marginRight="287dp"
        android:layout_marginLeft="47dp" />

    <TextView
        android:id="@+id/tvProfilePhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="275dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="10dp"
        android:text="Phone:"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tvProfileCredit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvProfileAdress"
        android:layout_marginRight="275dp"
        android:layout_marginLeft="47dp" />

    <TextView
        android:id="@+id/tvProfileCredit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="10dp"
        android:text="Credit Card:"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvProfilePhone"
        android:layout_marginLeft="47dp" />

</android.support.constraint.ConstraintLayout>
